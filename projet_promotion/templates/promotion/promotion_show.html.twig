{% extends 'base.html.twig' %}

{% block title %}
    Accuei
{% endblock %}

{% block body %}


    {# <div class="row"> #}
    {# <div class="col-4"> #}

        <div class="card border-info mb-3" style="max-width: 20rem;"> <div class="card-header">
            <h3>
                promotion :
                {{ promotion.title}}<br>
                city :
                {{ promotion.city }}
            </h3>

        </div>

        <div class="card-body">
            <h4 class="card-title">Etudiants :</h4>


            <p class="card-text">
                <ul>
                    {% for student in promotion.students %}

                        <li>
                            <a href="{{ path('student_show', {'promo_slug': promotion.slug, 'id': student.id} ) }}">{{ student.firstName }}
                                {{ student.lastName }}</a>
                        </li>

                    {% endfor %}
                </ul>

            </p>

        </div>
    </div>
    {# </div> #}
    {# </div> #}
{% endblock %}
